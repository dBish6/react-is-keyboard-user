{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "build",
    // "sourceMap": true,

    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",

    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "**/*.cjs", "**/*.test*"]
}
